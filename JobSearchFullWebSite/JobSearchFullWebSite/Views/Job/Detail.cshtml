@using JobSearchFullWebSite.ViewModels
@model JobDetailViewModel 
@{
    ViewData["Title"] = "Detail";
}


    <main>
        <div class="container">
            <div class="row mt-5">
                <div class="col-lg-8 col-12">
                    <section class="Genaral d-flex flex-column">
                        <div class="d-flex flex-row">
                            <h4 class="me-3">
                                <b>@Model.Job.Name</b>
                            </h4>
                            @if (Model.Job.IsFeatured)
                            {
                                <span style="
                    width: 20px !important;
                    height: 20px !important;
                    border-radius: 50%;
                    padding: 1%;
                    background-color: green;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                  ">
                                    <i class="fas fa-check white" style="font-size: 10px"></i>
                                </span>
                            }

                        </div>
                        <div class="col-12 d-flex flex-row row">
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 grey">
                                <i class="bi bi-briefcase"></i>
                                <span>@Model.Job.JobCategory.Name</span>
                            </div>
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 grey">
                                <i class="bi bi-geo-alt"></i>
                                <span>@Model.Job.City.CityName</span>
                            </div>
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 grey">
                                <i class="bi bi-clock"></i>
                                <span>@Model.Job.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 grey">
                                <i class="bi bi-cash-stack"></i>
                                <span>@Model.Job.OfferedMinSalary - @Model.Job.OfferedMaxSalary / @Model.Job.OfferedSalaryForTime</span>
                            </div>
                        </div>
                        <div class="FullTimeUrgent pt-2">
                            <span class="px-3 d-flex align-items-center"
                                  style="
                    background-color: #dde8f8;
                    border-radius: 20px;
                    color: #7b64ac;
                    font-size: 12px;
                    max-width: 150px;
                  ">@Model.Job.JobType.ToString()</span>
                        @if (Model.Job.IsUrgent)
                        {
                            @Html.Raw("&nbsp; &nbsp; &nbsp;");
                            <span class="px-3 d-flex align-items-center"
                                  style="
                    background-color: #fef2d9;
                    border-radius: 20px;
                    color: #fcc546;
                    font-size: 12px;
                    max-width: 150px;
                  ">Urgent</span>
                        }

                        </div>
                    </section>
                    <section class="Overview mt-5">
                        <div class="card p-3">
                            <h5><b>Job Overview</b></h5>
                            <div class="row g-4 mt-3 OverViewItems">
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="far fa-calendar me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Date Posted</h6>
                                        <span class="grey">@Model.Job.CreatedAt.ToString("MMM dd,yyyy")</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="fas fa-map-marker-alt me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Location</h6>
                                        <span class="grey">@Model.Job.City.CityName</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="far fa-money-bill-alt me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Offered Salary</h6>
                                        <span class="grey">@Model.Job.OfferedMinSalary - @Model.Job.OfferedMaxSalary/@Model.Job.JobType</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="fas fa-hourglass-half me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Expiration Date</h6>
                                        <span class="grey">@Model.Job.ExpirationDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="fas fa-user-check me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Experience</h6>
                                        <span class="grey">@Model.Job.RequiredExperience.ToString()</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="far fa-user me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Gender</h6>
                                        <span class="grey">@Model.Job.RequiredGender.ToString()</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="fab fa-acquisitions-incorporated me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Qualification</h6>
                                        <span class="grey">@Model.Job.RequiredQualificationr.ToString()</span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-12 d-flex flex-row">
                                    <i class="fas fa-layer-group me-3"
                                       style="font-size: 20px; color: #1967d2"></i>
                                    <div class="d-flex flex-column">
                                        <h6>Career Level</h6>
                                        <span class="grey">@Model.Job.CareerLevel.ToString()</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="AboutJob mt-5">
                        @Html.Raw(Model.Job.JobContentTextEditor);
