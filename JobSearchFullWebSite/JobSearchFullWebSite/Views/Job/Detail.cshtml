                    </section>
                    <br /><br /><br />
                    <div class="d-flex flex-row align-items-center">
                        <span><b>Share this post: </b></span>
                        &nbsp; &nbsp; &nbsp; &nbsp;
                        <div>
                            <button class="btn btn-primary">Facebook</button>
                            <button class="btn btn-secondary">Twitter</button>
                            <button class="btn btn-dark">Instagram</button>
                        </div>
                    </div>
                    <div class="d-flex flex-column mt-5">
                        <h4><b>Photos</b></h4>
                        <div class="row g-3">
                            @foreach (var item in Model.Job.JobImages)
                            {
                                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                    <img src="~/SiteImages/@item.Image"
                                         alt=""
                                         class="border-radius"
                                         style="width: 150px; height: 150px" />
                                </div>
                            }

                        </div>
                    </div>
                    <div class="d-flex flex-column my-5">
                        <h4><b>Related Jobs</b></h4>
                        <br />
                        <div class="row mt-5">
                            <div class="col-12">
                                @foreach (var item in Model.RelatedJobs.OrderBy(x=>x.CreatedAt).Take(5))
                                {
                                    <div class="card p-3 d-flex flex-row RelatedJobCard mb-3">
                                        <div class="RelatedJobCardImage me-3">
                                            <img src="~/SiteImages/@item.JobImages.FirstOrDefault(x=>x.IsPoster).Image"
                                                 alt=""
                                                 style="width: 60px; height: 60px" />
                                        </div>
                                        <div>
                                            <div class="d-flex flex-row">
                                                <div class="d-flex flex-row align-items-center">
                                                    <h5 class="d-flex align-items-center">
                                                        <b>@item.Name</b>
                                                    </h5>
                                                    @if (item.IsFeatured)
                                                            {
                                                                Html.Raw(" &nbsp; &nbsp; &nbsp;");
                                                        <span class="d-flex align-items-center"
                                                              style="color: green; font-size: 14px">Featured</span>
                                                    }

                                                </div>
                                                <div class="d-flex flex-row justify-content-end">
                                                    <i class="fas fa-bookmark ms-5 grey"></i>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-4 col-md-6 col-12 grey d-flex flex-row">
                                                    <div class="JobIcon">
                                                        <i class="fas fa-envelope"></i>
                                                    </div>
                                                    <span class="ms-2">@item.JobCategory.Name</span>
                                                </div>
                                                <div class="col-lg-4 col-md-6 col-12 grey d-flex flex-row">
                                                    <div class="JobIcon">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                    </div>
                                                    <span class="ms-2">@item.City.CityName</span>
                                                </div>
                                                <div class="col-lg-4 col-md-6 col-12 grey d-flex flex-row">
                                                    <div class="JobIcon">
                                                        <i class="fas fa-money-bill-alt"></i>
                                                    </div>
                                                    <span class="ms-2">@item.OfferedMinSalary-@item.OfferedMaxSalary/@item.OfferedSalaryForTime</span>
                                                </div>
                                            </div>
                                            <div class="RelatedFullUrgent">
                                                <div class="FullTime border-radius px-3">@item.JobType</div>
                                                @if (item.IsUrgent)
                                                {
                                                    <div class="Urgent border-radius px-3">Urgent</div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                    <br /><br /><br />
                </div>
                <div class="col-lg-4 col-12">
                    <div class="d-flex justify-content-end">
                        <span>Application ends: </span>
                        <span style="color: red">@Model.Job.ExpirationDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <br />
                    <div class="d-flex flex-row justify-content-around align-items-center">
                        <button class="btn btn-primary px-5 w-75">Apply Now</button>
                        <div class="
                  d-flex
                  align-items-center
                  justify-content-center
                  border-radius
                  bookmarkIcon
                "
                             style="
                  background-color: #eff4fc;
                  color: #1967d2;
                  width: 35px;
                  height: 35px;
                ">
                            <i class="fas fa-bookmark"></i>
                        </div>
                    </div>
                    <br />
                    <div class="grey d-flex justify-content-center">OR APPLY WITH</div>
                    <br />
                    <div>
                        <div class="card p-3 border-0 py-5"
                             style="background-color: #f5f7fc">
                            <div class="d-flex flex-row">
                                <img src="~/SiteImages/@Model.EmployerImage.Image"
                                     alt=""
                                     style="width: 70px; height: 70px" />
                                <div class="d-flex flex-column justify-content-center ms-3">
                                    <b>@Model.Job.Employer.Name</b>
                                    <a href="" style="text-decoration: none">
                                        View Company Profile
                                    </a>
                                </div>
                            </div>
                            <br />
                            <p class="d-flex flex-row">
                                <b>Categories:</b>
                                <span class="d-flex w-100 justify-content-end">@Model.Job.Employer.Category.Name</span>
                            </p>
                            <p class="d-flex flex-row">
                                <b>Founded Date:</b>
                                <span class="d-flex w-100 justify-content-end align-items-center">@Model.Job.Employer.FoundedDate</span>
                            </p>
                            <p class="d-flex flex-row">
                                <b>Location:</b>
                                <span class="d-flex w-100 justify-content-end">@Model.Job.Employer.City.CityName</span>
                            </p>
                            <p class="d-flex flex-row">
                                <b>Phone Number:</b>
                                <span class="d-flex w-100 justify-content-end align-items-center">
                                    @Model.Job.Employer.PhoneNumber
                                </span>
                            </p>
                            <p class="d-flex flex-row">
                                <b>Email:</b>
                                <span class="d-flex w-100 justify-content-end">@Model.Job.Employer.Email</span>
                            </p>
                            <p class="d-flex flex-row">
                                <b>Socials:</b>
                                <span class="d-flex w-100 justify-content-end">
                                    <a href="@Model.Job.Employer.FacebookUrl" style="text-decoration: none">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="@Model.Job.Employer.TwitterUrl" class="mx-3" style="text-decoration: none">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                    <a href="@Model.Job.Employer.LinkedinUrl" style="text-decoration: none">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                    <a href="@Model.Job.Employer.InstagramUrl" class="mx-3" style="text-decoration: none">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </span>
                            </p>
                            <br />
                            <a href="" style="text-decoration: none" class="CompanyButtonA">
                                <button class="border-0 border-radius w-100 py-3 CompanyButton">
                                    @Model.Job.Employer.Website
                                </button>
                            </a>
                        </div>
                    </div>
                    <br />
                    <div>
                        <div class="card p-3 border-0 mb-5 py-5"
                             style="background-color: #f5f7fc">
                            <h4><b>Contact @Model.Job.Name</b></h4>
                            <br />
                            <form asp-action="getcontact" asp-controller="job" asp-route-id="@Model.Job.Id" method="post" class="w-100"  enctype="multipart/form-data">
                                <input type="text" asp-for="@Model.JobContact.Subject"
                                       class="w-100 border-radius py-3 border-0 ps-3"
                                       placeholder="Subject" />
                                <span asp-validation-for="@Model.JobContact.Subject" class="text-danger"></span>
                                <br />
                                <br />
                                <input type="email" asp-for="@Model.JobContact.Email"
                                       class="w-100 border-radius py-3 border-0 ps-3"
                                       placeholder="Email" />
                                <span asp-validation-for="@Model.JobContact.Email" class="text-danger"></span>
                                <br />
                                <br />
                                <input type="text" asp-for="@Model.JobContact.PhoneNumber"
                                       class="w-100 border-radius py-3 border-0 ps-3"
                                       placeholder="Phone" />
                                <span asp-validation-for="@Model.JobContact.PhoneNumber" class="text-danger"></span>
                                <br />
                                <br />
                                <textarea class="border-0 border-radius ps-3 pt-3" asp-for="@Model.JobContact.Message"
                                          id=""
                                          rows="10"
                                          style="
                      height: 150px !important;
                      max-height: 150px !important;
                      min-height: 150px !important;
                      width: 100%;
                    "
                                          placeholder="Message"></textarea>
                                <span asp-validation-for="@Model.JobContact.Message" class="text-danger"></span>
                                <br />
                                <br />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <button type="submit"
                                        class="btn btn-primary w-100 border-radius py-3 JobContact">
                                    Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
 