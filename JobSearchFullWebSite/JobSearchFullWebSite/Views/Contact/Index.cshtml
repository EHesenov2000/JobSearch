@using JobSearchFullWebSite.Models
@model SiteContact
@{
    ViewData["Title"] = "Index";
}

    <main>
        <div class="map-area">
            <!-- google-map-area start -->
            <div class="google-map-area">
                <!--  Map Section -->
                <div id="contacts" class="map-area">
                    <div id="googleMap" style="width: 100%; height: 440px"></div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-12 d-flex flex-column">
                    <p class="AddresIcon">
                        <i class="fas fa-map-marker-alt"
                           style="font-size: 50px; color: blue"></i>
                    </p>
                    <p><b>Address</b></p>
                    <p class="grey">
                        329 Queensberry Street, North Melbourne VIC 3051, Australia.
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 col-12 d-flex flex-column">
                    <p class="CallUsIcon">
                        <i class="fas fa-mobile-alt"
                           style="font-size: 50px; color: blue"></i>
                    </p>
                    <p><b>Call Us</b></p>
                    <p class="blue">123 456 7890</p>
                </div>
                <div class="col-lg-4 col-md-6 col-12 d-flex flex-column">
                    <p class="EmailIcon">
                        <i class="far fa-envelope"
                           style="font-size: 50px; color: blue"></i>
                    </p>
                    <p><b>Email</b></p>
                    <p class="grey">contact.superio@example.com</p>
                </div>
            </div>
            <div class="card p-5">
                <h4><b>Leave A Message</b></h4>
                <br />
                <form  class="d-flex flex-column" asp-action="AddContactItem" asp-controller="contact">
                    <div class="row g-4">
                        <div class="col-md-6 col-12 d-flex flex-column">
                            <label for="" class="grey mb-2">Your Name</label>
                            <input type="text"
                                   class="border-0 backColorBlue p-3 border-radius"
                                   placeholder="Name" asp-for="@Model.Name" />
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="col-md-6 col-12 d-flex flex-column">
                            <label for="" class="grey mb-2">Your Email</label>
                            <input type="email"
                                   class="border-0 backColorBlue p-3 border-radius"
                                   placeholder="Email" asp-for="@Model.Email" />
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                        <div class="col-12 d-flex flex-column">
                            <label for="" class="grey mb-2">Subject</label>
                            <input type="text"
                                   class="border-0 backColorBlue p-3 border-radius"
                                   placeholder="Subject" asp-for="@Model.Subject" />
                            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                        </div>
                        <div class="col-12 d-flex flex-column">
                            <label for="" class="grey mb-2">Your Comment</label>
                            <textarea class="border-radius Review backColorBlue p-4"
                                      placeholder="Write comment"
                                      id=""
                                      cols="30"
                                      rows="10"
                                      style="height: 200px; min-height: 200px; max-height: 200px" asp-for="@Model.Comment"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Comment"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-25 mt-4 py-3">
                        Submit Review
                    </button>
                </form>
            </div>
        </div>
        <br>
        <br>
        <div class="mx-3 backColorBlue p-5 my-5"
             style="
          background-image: url(./../Layihe/layihem/apusthemes.com/wp-demo/superio/wp-content/uploads/2021/03/group8.jpg);
        ">
            <p class="Recruiting">
                <h4><b>Recruiting?</b></h4>
            </p>
            <p class="grey w-50">Advertise your jobs to millions of monthly users and search 15.8 million CVs in our database.</p>
            <button class="btn btn-primary">Start Recruiting Now</button>
        </div>
        <br>
        <br>
    </main>
 
