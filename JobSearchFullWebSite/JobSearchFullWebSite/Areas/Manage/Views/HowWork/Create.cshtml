@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model HowWork
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Title">Title</label>
                <input asp-for="@Model.Title" class="form-control" id="Title" placeholder="Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.Content">Content</label>
                <input asp-for="@Model.Content" class="form-control" id="Content" placeholder="Content">
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.File">Image</label>
                <input asp-for="@Model.File" class="form-control" id="File" placeholder="File">
                <span asp-validation-for="@Model.File" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <br />
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>
