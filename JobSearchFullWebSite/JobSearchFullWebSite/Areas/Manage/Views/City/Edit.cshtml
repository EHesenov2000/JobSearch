@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobSearchFullWebSite.Models
@model City
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.CityName">City Name</label>
                <input asp-for="@Model.CityName" />
                <span asp-validation-for="@Model.CityName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.Latitude">City Latitude</label>
                <input asp-for="@Model.Latitude" />
                <span asp-validation-for="@Model.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 d-flex flex-column">
                <label asp-for="@Model.Longitude">City Longitude</label>
                <input asp-for="@Model.Longitude" />
                <span asp-validation-for="@Model.Longitude" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12 d-flex flex-column">
                <label asp-for="@Model.File">City Image</label>
                <input asp-for="@Model.File" />
                <span asp-validation-for="@Model.File" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <div class="row">
            @if (Model != null)
            {
                <div class="img-box col-md-4" style="position:relative;max-width:200px;width:200px;height:200px;max-height:200px;">
                    <img class="d-block" src="~/uploads/@Model.Image" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />
                    <i class="fas fa-times remove-img-box" style="color:red;position:absolute;cursor:pointer;right:4px;top:2px;font-size:17px"></i>
                    @*<input type="hidden" name="AboutTopImageId[]" value="@Model.Id" />*@
                </div>
            }
        </div>
        <br />
        <div class="form-row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>